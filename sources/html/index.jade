    body
        //Header nav
        nav.navbar.navbar-inverse.navbar-fixed-top.header-blue
            div.container-fluid
                //Mobile nav
                div.navbar-header
                    button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#header-links", aria-expanded="false")
                        span.sr-only Меню
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                //Navigation links
                div.collapse.navbar-collapse#header-links
                    ul.nav.navbar-nav.color-light-blue
                        li.text-center
                            a(href="#about") О нас
                        li.text-center
                            a(href="#contact") Связаться с нами
                        li.text-center
                            a(href="#join") Стать частью команды
